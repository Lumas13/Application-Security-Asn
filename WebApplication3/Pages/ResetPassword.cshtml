@page
@model WebApplication3.Pages.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

<h1>Reset Password</h1>

<form method="post">
    <input type="hidden" asp-for="ResetPasswordViewModel.UserId" />
    <input type="hidden" asp-for="ResetPasswordViewModel.Code" />

    <div class="form-group">
        <label asp-for="ResetPasswordViewModel.Password">New Password</label>
        <input type="password" asp-for="ResetPasswordViewModel.Password" class="form-control" />
        <span asp-validation-for="ResetPasswordViewModel.Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ResetPasswordViewModel.ConfirmPassword">Confirm Password</label>
        <input type="password" asp-for="ResetPasswordViewModel.ConfirmPassword" class="form-control" />
        <span asp-validation-for="ResetPasswordViewModel.ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Reset Password</button>
</form>